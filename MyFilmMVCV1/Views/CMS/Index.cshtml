@{
    Layout = "_CMS";
}
<h1>All Films</h1>

<h2>@ViewData["userId"]</h2>
<h2>@ViewData["userInfo"]</h2>
<h3>Username (from @@User.Identity.Name) @User.Identity.Name</h3>


<p><a asp-controller="CMS" asp-action="AddMovie" class="add">Add Film</a></p>

<table class="table">
    <tr>
        <td>Film Title</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    @foreach (var item in Model)

    {
    <tr>
        <td><a asp-controller="Home" asp-action="MovieDetails" asp-route-id="@item.FilmID">@item.FilmTitle</a></td>
        <td><p><a asp-controller="CMS" asp-action="UpdateMovie" asp-route-id="@item.FilmID" class="edit">Update</a></p></td>
        <td><p><a asp-controller="CMS" asp-action="DeleteMovie" asp-route-id="@item.FilmID" class="delete">Delete</a></p></td>
    </tr>
    }

</table>