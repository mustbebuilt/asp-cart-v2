@{
    decimal cartTotal = 0;
}

<div class="cartSummary">

    <h3>Cart Summary</h3>


    @if (!User.IsInRole("StandardUser"))
    {
<p><a asp-controller="Security" asp-action="UserSignIn">Login</a></p> }
            else
            {

@if (Model.Count == 0)

{

<p>Shopping Cart Empty.</p> }
else
{


@foreach (var item in Model)
{

    cartTotal += item.OrderQuantity * item.FilmPrice;

<h4>@item.FilmTitle</h4>
                        <p>
                            @item.OrderQuantity at &pound;@((item.FilmPrice).ToString("0.00")) each = &pound;@((item.OrderQuantity * item.FilmPrice).ToString("0.00"))
                        </p>}

                    <h4>Total &pound;@cartTotal.ToString("0.00")</h4>

                                        <p><a asp-controller="Home" asp-action="ManageCart">Manage Cart</a></p>}}
</div>

